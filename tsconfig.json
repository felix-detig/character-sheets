{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./src",
		"paths": {
			"assets": ["src/assets"],
			"components": ["src/components"],
			"store": ["src/store"],
			"types": ["src/types"],
			"utils": ["src/utils"],
			"getter-graph": ["src/packages/getter-graph"],
			"user-functions": ["src/packages/user-functions"],
			"sheet": ["src/packages/sheet"],
		}
	}
}
